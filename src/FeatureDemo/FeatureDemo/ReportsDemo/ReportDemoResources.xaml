<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:FeatureDemo.Common">
    <Style TargetType="common:AlertControl">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0,49,0,0"/>
        <Setter Property="MessageContent">
            <Setter.Value>
                <TextBlock TextWrapping="WrapWholeWords" Foreground="Black">
                    <Bold>Important Note: </Bold>
                DevExpress Reports is not included in the DevExpress WinUI component distribution. To use DevExpress Reports and/or replicate the functionality illustrated in these samples, you must own an active DevExpress Subscription (Reporting, DXperience, or Universal). For pricing information, please refer to the <Hyperlink Foreground="#FF0078D7" NavigateUri="https://go.devexpress.com/DevExpress_Demos_WinUI_Reporting_Buy.aspx">DevExpress Products matrix</Hyperlink>.
                </TextBlock>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
